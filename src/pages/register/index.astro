---
import Layout from "../../layouts/Layout.astro";
---

<Layout title='Register'>
  <section class='flex flex-col items-center justify-center h-screen'>
    <h1 class='text-3xl font-bold text-center mb-8'>Register</h1>
    <form class='w-1/4 mx-auto min-w-[400px]'>
      <div class='flex flex-col gap-4' class='bg-red-500'>
        <input placeholder='Username' class='p-4' />
        <input type='email' class='p-4' placeholder='Email' />
        <input type='password' class='p-4' placeholder='Password' />
        <button class='bg-blue-500 text-white px-4 py-2 rounded-md' >Register</button
        >
      </div>
    </form>
  </section>
</Layout>
